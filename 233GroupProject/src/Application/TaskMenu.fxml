<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" style="-fx-background-color: #000b38;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.TaskMenuController">
   <children>
   	  <!-- Logo -->
      <ImageView fitHeight="106.0" fitWidth="157.0" layoutX="172.0" layoutY="62.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/taskilla_logo.jpg" />
         </image>
      </ImageView>
      <!-- Page Title -->
      <Text fill="#24a78d" layoutX="164.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Menu">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <!-- Task Name -->
      <Text fx:id="taskName" fill="#24a78d" layoutX="218.0" layoutY="194.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="taskName" text="Name">
         <font>
            <Font size="24.0" />
         </font></Text>
      <!-- Due Date -->
      <Text fx:id="dueDate" fill="#24a78d" layoutX="213.0" layoutY="229.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="taskDue" text="Due Date">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
      <!-- Notes Header -->
      <Text fill="#24a78d" layoutX="124.0" layoutY="287.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="taskNotes" text="Notes:">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      
      <!-- Complete Button -->
      <Button alignment="CENTER" layoutX="200.0" layoutY="328.0" mnemonicParsing="false" onAction="#completeButton" prefHeight="100.0" prefWidth="100.0" styleClass="circleButton" stylesheets="@TaskMenu.css">
         <font>
            <Font size="13.0" />
         </font>
         <graphic>
            <ImageView fitHeight="63.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/Checkmark.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <!-- Edit Button -->
      <Button alignment="CENTER" layoutX="199.0" layoutY="443.0" mnemonicParsing="false" onAction="#editButton" prefHeight="100.0" prefWidth="100.0" styleClass="circleButton" stylesheets="@TaskMenu.css">
         <font>
            <Font size="13.0" />
         </font>
         <graphic>
            <ImageView fitHeight="84.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../../git/Taskilla-05-22/233GroupProject/images/Pen%20Icon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <!-- Delete Button -->
      <Button alignment="CENTER" layoutX="200.0" layoutY="560.0" mnemonicParsing="false" onAction="#deleteButton" prefHeight="100.0" prefWidth="100.0" styleClass="deleteButton" stylesheets="@TaskMenu.css">
         <font>
            <Font size="13.0" />
         </font>
         <graphic>
            <ImageView fitHeight="86.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/Cross%20Delete.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <!-- Notes Area -->
      <TextArea fx:id="notesArea" layoutX="171.0" layoutY="251.0" prefHeight="61.0" prefWidth="225.0" text="place" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButton" styleClass="backButton">
         <graphic>
            <ImageView fitHeight="61.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/Back.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
